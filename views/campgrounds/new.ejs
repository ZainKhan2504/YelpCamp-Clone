<% include ../partials/header %>
<div class = "container">
    <div class = "row justify-content-center">
        <div class = "col-md-12 text-center">
            <h1>Create a New Campground</h1>
        </div>
        <div class = "col-xs-12 col-md-6 col-lg-4">
            <form action = "/campgrounds" method = "POST" enctype = "multipart/form-data">
                <label for = "name">Name</label>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "campground[name]" placeholder = "Name">
                </div>
                <label for = "price">Price</label>
                <div class = "form-group">
                    <input class = "form-control" type = "number" name = "campground[price]" placeholder = "Price" min = "0.01" step = "0.01">
                </div>
                <label for = "image">Image</label>
                <div class = "form-group">
                    <input type = "file" name = "image" accept = "image/*" required>
                </div>
                <label for = "description">Description</label>
                <div class = "form-group">
                    <textarea class = "form-control" type = "text" name = "campground[description]" placeholder = "Description...."></textarea>
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href = "/campgrounds">Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>