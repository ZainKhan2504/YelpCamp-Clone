<% include ../partials/header %>
<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center;">Edit <%= campground.name %></h1>
        <div style = "width: 30%; margin: 30px auto;">
            <form action = "/campgrounds/<%= campground._id %>?_method=PUT" method = "POST" enctype = "multipart/form-data">
                <label for = "name">Name</label>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "name" value = "<%= campground.name %>">
                </div>
                <label for = "price">Price</label>
                <div class = "form-group">
                    <input class = "form-control" type = "number" name = "price" value = "<%= campground.price %>" min = "0.01" step = "0.01">
                </div>
                <label for = "image">Image</label>
                <div class = "form-group">
                    <input type = "file" name = "image" accept = "image/*">
                </div>
                <label for = "description">Description</label>
                <div class = "form-group">
                    <textarea class = "form-control" type = "text" name = "description"><%= campground.description %></textarea>
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href = "/campgrounds">Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>